<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learzhu.study.studyapplication.activitys.TextViewActivity">

    <TextView
        android:id="@+id/show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:maxWidth="100dp"
        android:textIsSelectable="true"
        tools:text="SSSSSSTESTSELECTA" />

    <!--android:textColor="@color/common_signin_btn_dark_text_disabled"-->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/show_text"
        android:src="@drawable/triangle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/layers" />

    <!--波纹有边界-->
    <Button
        android:id="@+id/normal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/show_text"
        android:background="?android:attr/selectableItemBackground"
        android:text="normalBUTTON!!!!!!!!!!!!"
        android:textColor="@color/colorPrimaryDark" />

